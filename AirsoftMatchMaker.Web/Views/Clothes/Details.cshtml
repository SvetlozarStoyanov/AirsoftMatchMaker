@model ClothingViewModel

@{
    string img = @Model.ImageUrl != null ? @Model.ImageUrl : $"/img/Default/Clothes/{Model.ClothingColor}.jpg";
    ViewBag.Title = "Clothing Details";
}




<h1 class="text-center mt-6 mb-6">@Model.Name</h1>
<article class="mt-6 mb-6 bg-white bg-opacity-25 border border-dark">
    <div class="text-center">
        <p>
            <h4>
                Color :
                <b>@string.Join(" ", Regex.Matches(Model.ClothingColor.ToString(), "[A-Z][a-z]*").Select(m => m.Value).ToArray())</b>
            </h4>
        </p>
    </div>
    <div class="container mt-5 mb-5">
        <div class="text-center mt-5 mb-5">
            <img class="" style="width: 20rem;"
                 src="@img" alt="Weapon Image">

            <div class="text-center mt-5 mb-5">
                <p style="font-size:40px;">
                    @Model.Description
                </p>
            </div>
            <div class="mt-6 mb-6 text-center">
                <p>
                    <h4>
                        Price:
                        <b>
                            @Model.Price credits
                        </b>
                    </h4>
                </p>
            </div>
        </div>
    </div>
    <div class="text-center">
    </div>
</article>