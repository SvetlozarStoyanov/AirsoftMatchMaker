@using System.Text.RegularExpressions;
@model IEnumerable<ClothingListModel>
<table class=" table table-bordered  table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Color
            </th>
            <th>
                Price
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var clothing in Model)
        {
            <tr>
                <td width="50%">
                    @clothing.Name
                </td>
                <td width="30%">
                    @string.Join(" ", Regex.Matches(clothing.ClothingColor.ToString(), "[A-Z][a-z]*").Select(m => m.Value).ToArray())
                </td>
                <td width="30%">
                    @clothing.Price credits
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-area="Player" asp-controller="Clothes" asp-action="Details" asp-route-id="@clothing.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-info-square-fill"></i>
                            Details
                        </a>
                    </div>

                    <div class="w-75 btn-group" role="group">
                            <a asp-area="Player" asp-controller="Clothes" asp-action="Buy" asp-route-id="@clothing.Id" class="btn btn-success mx-2">
                            <i class="bi bi-info-square-fill"></i>
                            Buy
                        </a>
                    </div>

                </td>
            </tr>
        }
    </tbody>

</table>
