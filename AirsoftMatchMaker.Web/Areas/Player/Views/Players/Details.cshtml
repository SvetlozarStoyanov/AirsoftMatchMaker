            <div class="container">
                <h2>Clothes</h2>
                @foreach (var clothing in Model.Clothes)
                {
                        <a class="btn" asp-area="Player" asp-controller="Clothes" asp-action="Details" asp-route-id="@clothing.Id">

                        <div class="card" style="width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title">@clothing.Name</h5>
                                @if (clothing.ImageUrl != null)
                                {
                                    <img class="w-25" src="@clothing.ImageUrl" />
                                }
                                <p class="card-text"></p>
                            </div>
                        </div>
                    </a>
                }
            </div>
            <div class="container">
                <h2>Weapons</h2>
                @foreach (var weapon in Model.Weapons)
                {
                    <a class="btn" asp-controller="Weapons" asp-action="Details" asp-route-id="@weapon.Id">
                        <div class="card" style="width: 18rem;">
                            <div class="card-body">
