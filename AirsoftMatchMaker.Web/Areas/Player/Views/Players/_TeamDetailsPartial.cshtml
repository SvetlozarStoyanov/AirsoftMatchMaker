@model TeamViewModel

@{
    ViewBag.Title = "Team Details";
}
<h1 class="text-center mt-3 mb-3">@Model.Name</h1>
<article class="mt-3 mb-3 bg-dark bg-opacity-25 border border-white">
    <div class="text-center">
        <p>
            <h4>
                Wins:
                <b>
                    @Model.Wins
                </b>
            </h4>
        </p>
        <p>
            <h4>
                Losses:
                <b>
                    @Model.Losses
                </b>
            </h4>
        </p>
        <p>
            <h4>
                Average skill level: <b> @Model.AverageSkillLevel</b>
            </h4>
        </p>
    </div>
</article>

<script src="~/js/Common/collapseArrow.js"></script>