@model PlayerClassListModel

<div class="mt-3">
    <div class="card mb-3 bg-white bg-opacity-10">

        <div class="card-body text-center">
            <h4 class="text-center">@Model.Name</h4>
            <h6><b>@Model.Description</b></h6>
            <br />
            @if (ViewBag.CurrentUserPlayerClassId != Model.Id)
            {
                <a asp-area="Player" asp-controller="PlayerClasses" asp-action="ChangeClass" asp-route-id="@Model.Id"
               class="btn btn-info">
                    Become
                </a>
            }
        </div>
    </div>
</div>
