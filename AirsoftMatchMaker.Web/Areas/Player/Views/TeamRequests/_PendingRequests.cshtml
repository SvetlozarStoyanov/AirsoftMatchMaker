@model IEnumerable<TeamRequestListModel>

@if (ViewBag.ViewType == "Index")
{
    <h2 class="text-center">Players who have requested to join the team</h2>
    <table class="table table-bordered  table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Class
                </th>
                <th>
                    Skill Level
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teamRequest in Model)
            {
                <tr>
                    <td width="30%">
                        @teamRequest.Player.UserName
                    </td>
                    <td width="30%">
                        @teamRequest.Player.PlayerClassName
                    </td>
                    <td width="30%">
                        @teamRequest.Player.SkillLevel
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                             <a asp-area="Player" asp-controller="Players" asp-action="Details" asp-route-id="@teamRequest.PlayerId" class="btn btn-info mx-2">
                                <i class="bi bi-info"></i>
                                Player details
                            </a>
                            <a asp-area="Player" asp-controller="TeamRequests" asp-action="Accept" asp-route-id="@teamRequest.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-check-lg"></i>
                                Accept
                            </a>
                            <a asp-area="Player" asp-controller="TeamRequests" asp-action="Decline" asp-route-id="@teamRequest.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>
                                Decline
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else if (ViewBag.ViewType == "Mine")
{
    <h2 class="text-center">Teams I have requested to join</h2>
    <table class="table table-bordered  table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Team Name
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teamRequest in Model)
            {
                <tr>
                    <td width="30%">
                        @teamRequest.TeamName
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-area="Player" asp-controller="TeamRequests" asp-action="Delete" asp-route-id="@teamRequest.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>
                                Delete request
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

