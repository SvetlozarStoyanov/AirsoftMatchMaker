@model IEnumerable<RoleListModel>
<h2 class="text-center">Roles which can be requested</h2>

<table class=" table table-bordered  table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            string controllerName = role.Name + "s";
            string actionName = $"Request{role.Name}Role";
            <tr>
                <td width="30%">
                    @role.Name
                </td>
                <td width="50%">
                    @role.Description
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        @if (role.Name != "GuestUser" && role.Name != "Administrator")
                        {
                            <a asp-area="" asp-controller="@controllerName" asp-action="@actionName" class="btn btn-primary mx-2">
                                <i class="bi bi-arrow-right-circle-fill"></i>
                                Request Role
                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>