@model MapViewModel

@{
    string img = @Model.ImageUrl != null ? @Model.ImageUrl : $"/img/Default/Maps/{Model.Terrain}.jpg";
    ViewBag.Title = "Map Details";
}
<h1 class="text-center mt-5 mb-5">@Model.Name</h1>
<article class="mt-3 mb-3 bg-dark bg-opacity-25 border border-white">
    <div class="text-center">
        <p>
            <h4>
                Size:
                <b>@string.Join(" ", Regex.Matches(Model.Mapsize.ToString(), "[A-Z][a-z]*").Select(m => m.Value).ToArray())</b>
            </h4>
        </p>
        <p>
            <h4>
                Game mode:
                <b>
                    @Model.GameModeName
                </b>
            </h4>
        </p>
        <p>
            <h4>
                Terrain type:
                <b>@string.Join(" ", Regex.Matches(Model.Terrain.ToString(), "[A-Z][a-z]*").Select(m => m.Value).ToArray())</b>
            </h4>
        </p>
        <p>
            <h4>
                Average engagement distance:
                <b>
                    @Model.AverageEngagementDistance
                </b>
            </h4>
        </p>
    </div>
    <div class="container mt-3 mb-3">
        <div class="text-center mt-3 mb-3">
            <img class="" style="width: 20rem;"
                 src="@img" alt="Weapon Image">

            <div class="text-center mt-6 mb-6">
                <p style="font-size:40px;">
                    @Model.Description
                </p>
            </div>
            <section class="text-center mt-3 mb-3">
                <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseGames" aria-expanded="false" aria-controls="collapseGames">
                    <h5>Games with on this map: @Model.Games.Count </h5>
                </button>
                <div class="collapse" id="collapseGames">
                    <div class="row">
                        @foreach (var game in Model.Games)
                        {
                            <partial name="_GameMinPartial" model="@game" />
                        }
                    </div>
                </div>
            </section>
        </div>
    </div>
</article>