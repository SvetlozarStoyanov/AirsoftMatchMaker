@using System.Text.RegularExpressions;
@model AmmoBoxViewModel

@{
    ViewBag.Title = "Ammo Box Details";
}

<h2 class="text-center">@ViewBag.Title</h2>


<div class="container" style="display:inline">
    <div class="row">
        @*   <div class="col-4">
        <img class="card-img-top" style="width: 20rem;"
        src="@Model.ImageUrl" alt="House Image">
        </div>*@
        <div class="card col-8 border-0">
            <p style="font-size:25px;">@Model.Name</p>
            @*<p>Located in: <b>@Model.Address</b></p>*@
            <p>
                Ammo : @Model.Amount
            </p>
            <p>
                Boxes left : @Model.Quantity
            </p>

            @if (Model.VendorName != null)
            {
                <p>
                    Vendor:
                    <b>
                        <a class="btn btn-primary btn-info" asp-area="Player" asp-controller="Vendors" asp-action="Details" asp-route-id="@Model.VendorId.Value"> @Model.VendorName</a>
                    </b>
                </p>
            }
            <p>
                Price:
                <b>
                    @Model.Price credits
                </b>
            </p>

        </div>
    </div>
</div>