@using System.Text.RegularExpressions;
@model IEnumerable<AmmoBoxListModel>
<table class=" table table-bordered  table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Ammo
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ammoBox in Model)
        {
                <tr>
                    <td width="50%">
                    @ammoBox.Name
                    </td>
                    <td width="30%">
                    @ammoBox.Amount ammo
                    </td>
                    <td width="30%">
                    @ammoBox.Price credits
                    </td>
                    <td width="30%">
                    @ammoBox.Quantity left
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-area="Player" asp-controller="AmmoBoxes" asp-action="Details" asp-route-id="@ammoBox.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-info-square-fill"></i>
                                Details
                            </a>
                        </div>

                            <div class="w-75 btn-group" role="group">
                                <a asp-area="Player" asp-controller="AmmoBoxes" asp-action="Buy" asp-route-id="@ammoBox.Id" class="btn btn-success mx-2">
                                    <i class="bi bi-info-square-fill"></i>
                                    Buy
                                </a>
                            </div>

                    </td>
                </tr>
        }
    </tbody>

</table>
