@model TeamViewModel

@{
    ViewBag.Title = "Team Details";
}
<h1 class="text-center mt-6 mb-6">@Model.Name</h1>
<article class="mt-6 mb-6 bg-dark bg-opacity-25 border border-white">
    <div class="text-center">
        <p>
            <h4>
                Wins:
                <b>
                    @Model.Wins
                </b>
            </h4>
        </p>
        <p>
            <h4>
                Losses:
                <b>
                    @Model.Losses
                </b>
            </h4>
        </p>
        <p>
            <h4>
                Average skill level: <b> @Model.AverageSkillLevel</b>
            </h4>
        </p>
    </div>
    <section class="text-center mt-6 mb-6">
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePlayers" aria-expanded="true" aria-controls="collapsePlayers">
            <h5>@Model.Players.Count players</h5>
        </button>
        <div class="show" id="collapsePlayers">
            <div class="row">
                @foreach (var player in Model.Players)
                {
                    <partial name="_PlayerMinPartial" model="@player" />
                }
            </div>
        </div>
    </section>
    <hr />
    <section class="text-center mt-6 mb-6">
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseGames" aria-expanded="true" aria-controls="collapseGames">
            <h5>@Model.Games.Count games</h5>
        </button>
        <div class="show" id="collapseGames">
            <div class="row">
                @foreach (var game in Model.Games)
                {
                    <partial name="_GameMinPartial" model="@game" />
                }
            </div>
        </div>
    </section>
</article>




