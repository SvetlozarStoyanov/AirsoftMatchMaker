@using System.Text.RegularExpressions;
@model IEnumerable<TeamListModel>
<table class=" table table-bordered  table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Wins
            </th>
            <th>
                Losses
            </th>
            <th>
                Average Skill Level
            </th>
            <th>
                Players count
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
            <tr>
                <td width="50%">
                    @team.Name
                </td>
                <td width="30%">
                    @team.Wins
                </td>
                <td width="30%">
                    @team.Losses
                </td>
                <td width="30%">
                    @team.AverageSkillPoints
                </td>
                <td width="30%">
                    @team.PlayersCount
                </td>

                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-area="Player" asp-controller="Teams" asp-action="Details" asp-route-id="@team.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-info-square-fill"></i>
                            Details
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>
