@model TeamViewModel

@{
    ViewBag.Title = "My Team";
}
<h1 class="text-center mt-5 mb-5">@Model.Name</h1>
<article class="mt-5 mb-5 bg-dark bg-opacity-25 border border-white">
    <div class="text-center">
        <p>
            <h4>
                Wins:
                <b>
                    @Model.Wins
                </b>
            </h4>
        </p>
        <p>
            <h4>
                Losses:
                <b>
                    @Model.Losses
                </b>
            </h4>
        </p>
        <p>
            <h4>
                Average skill level: <b> @Model.AverageSkillLevel</b>
            </h4>
        </p>
    </div>
    <section class="text-center mt-5 mb-5">
        <button class="btn btn-info" id="collapseBtn" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePlayers" aria-expanded="true" aria-controls="collapsePlayers">
            <h5>
                @Model.Players.Count players
                <i id="collapseBtnIcon" class="bi bi-arrow-up"></i>
            </h5>

        </button>
        <div class="show" id="collapsePlayers">
            <div class="row">
                @foreach (var player in Model.Players)
                {
                    <partial name="_PlayerMinPartial" model="@player" />
                }
            </div>
        </div>
    </section>
    <hr />
    <section class="text-center mt-5 mb-5">
        <h5>
            Last Games
        </h5>
        <div class="row">
            @foreach (var game in Model.Games)
            {
                <partial name="_GameMinPartial" model="@game" />
            }
        </div>
        <a class="btn btn-info" asp-area="Player" asp-controller="Games" asp-action="Index" asp-route-teamName="@Model.Name">
            See all team games
        </a>
    </section>
    <div class="text-center mt-5 mb-5">
        <a asp-area="Player" asp-controller="TeamRequests" asp-action="Create" asp-route-teamId="@Model.Id" asp-route-requestType="@TeamRequestType.Leave" class="btn btn-danger">Leave team</a>
    </div>
</article>

<script src="~/js/Common/collapseArrow.js"></script>




