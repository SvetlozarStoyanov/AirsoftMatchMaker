@model VendorViewModel

@{
    ViewBag.Title = "Vendor Details";
}
<h1 class="text-center mt-3 mb-3">@Model.UserName</h1>
<article class="mt-3 mb-3 bg-white bg-opacity-25 border border-dark">
    <div class="text-center">
        <p>
            <h4>
                Ammo Boxes on Sale:
                <b>
                    @Model.AmmoBoxes.Count
                </b>
            </h4>
        </p>
        <p>
            <h4>
                Clothes on Sale:
                <b>
                    @Model.Clothes.Count
                </b>
            </h4>
        </p>

             <p>
            <h4>
                Weapons on Sale:
                <b>
                    @Model.Weapons.Count
                </b>
            </h4>
        </p>
    </div>
</article>