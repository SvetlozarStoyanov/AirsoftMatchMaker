@model PlayerViewModel

@{
    ViewBag.Title = "Player Details";
}
<h1 class="text-center mt-3 mb-3">@Model.UserName</h1>
<article class="mt-3 mb-3 bg-white bg-opacity-25 border border-dark">
    <div class="text-center">
        <p>
            <h4>
                Skill Level:
                <b>
                    @Model.SkillLevel
                </b>
            </h4>
        </p>


        <p>
            <h4>
                Class:
                <b>
                    @Model.PlayerClassName
                </b>
            </h4>
        </p>
    </div>
</article>