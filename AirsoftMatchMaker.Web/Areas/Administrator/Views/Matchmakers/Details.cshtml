@using System.Text.RegularExpressions;
@model MatchmakerViewModel

@{
    ViewBag.Title = "Matchmaker Details";
}

<h1 class="text-center mt-3 mb-3">@Model.UserName</h1>
<article class="mt-3 mb-3 bg-white bg-opacity-25 border border-dark">
    <div class="row">
        <div class="container">
            <h2 class="text-center mt-3 mb-3">Games organised</h2>
            @foreach (var game in Model.OrganisedGames)
            {
                <a class="btn" asp-controller="Games" asp-action="Details" asp-route-id="@game.Id">

                    <div class="card border border-dark" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">@game.Name</h5>
                            <p class="card-text">@game.Date</p>
                            <p class="card-text">@game.Result</p>
                            <p class="card-text">Status: @game.GameStatus</p>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</article>
