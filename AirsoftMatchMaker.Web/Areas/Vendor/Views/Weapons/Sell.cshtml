@model WeaponSellModel

<h2 class="text-center">Import Weapon</h2>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <section>
            <form id="account" asp-area="Vendor" asp-controller="Weapons" asp-action="Sell" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WeaponType">Weapon Type</label>
                    <input asp-for="WeaponType" class="form-control" disabled>
                    <input asp-for="WeaponType" class="form-control" hidden>
                    <span asp-validation-for="WeaponType" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input class="form-control" type="text" data-val="true" data-val-number="The field Price must be a number." data-val-range="Price cannot be greater than  the original price!" data-val-range-max="@Model.OldPrice" data-val-range-min="1" data-val-required="The Price field is required." id="Price" name="Price">
                    <span asp-validation-for="Price" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OldPrice"></label>
                    <input asp-for="OldPrice" class="form-control" disabled>
                    <input asp-for="OldPrice" class="form-control" hidden>
                    <span asp-validation-for="OldPrice" class="small text-danger"></span>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary mt-3" type="submit" value="Sell">Sell</button>
                </div>
            </form>
        </section>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}