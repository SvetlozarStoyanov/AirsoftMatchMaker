@using System.Text.RegularExpressions;
@model WeaponCreateModel

<h2 class="text-center">Import Weapon</h2>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <section>
            <form id="account" asp-area="Vendor" asp-controller="Weapons" asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FeetPerSecond"></label>
                    <input asp-for="FeetPerSecond" class="form-control">
                    <span asp-validation-for="FeetPerSecond" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FireRate"></label>
                    <input asp-for="FireRate" class="form-control">
                    <span asp-validation-for="FireRate" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AverageAmmoExpendedPerGame"></label>
                    <input asp-for="AverageAmmoExpendedPerGame" class="form-control">
                    <span asp-validation-for="AverageAmmoExpendedPerGame" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control">
                    <span asp-validation-for="Price" class="small text-danger"></span>
                </div>
                @if (Model.WeaponType == AirsoftMatchMaker.Infrastructure.Data.Enums.WeaponType.Heavy)
                {
                    <div class="form-group">
                        <label asp-for="PreferedEngagementDistance">Color</label>
                        <select asp-for="PreferedEngagementDistance" class="form-control">
                            @foreach (var color in Model.PreferedEngagementDistances)
                            {
                                <option value="@color">@string.Join(" ", Regex.Matches(color.ToString(), "[A-Z][a-z]*").Select(m => m.Value).ToArray())</option>
                            }
                        </select>
                    </div>
                }
                <div class="text-center">
                    <input class="btn btn-primary mt-3" type="submit" value="Save" />
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}