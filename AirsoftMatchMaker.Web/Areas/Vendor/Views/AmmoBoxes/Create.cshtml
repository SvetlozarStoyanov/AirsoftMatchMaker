@model AmmoBoxCreateModel
@{
    ViewBag.Title = "Import Ammo boxes";
}
<h2 class="text-center">@ViewBag.Title</h2>
<input id="userCredits" value="@ViewBag.UserCredits" hidden/>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-area="Vendor" asp-controller="AmmoBoxes" asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmmoAmount"></label>
                <input asp-for="AmmoAmount" class="form-control">
                <span asp-validation-for="AmmoAmount" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input id="price" asp-for="Price" class="form-control" >
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input id="addedQuantity" asp-for="Quantity" class="form-control">
                <span asp-validation-for="Quantity" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinalImportPrice">Final price</label>
                <input id="finalImportPriceForUi" asp-for="FinalImportPrice" class="form-control" disabled>
                <input id="finalImportPriceForSubmit" asp-for="FinalImportPrice" class="form-control" hidden>
                <span asp-validation-for="FinalImportPrice" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <button id="submitFormBtn" type="submit" class="btn btn-primary mt-3">Import</button>
            </div>
        </form>
    </div>
</div>

<script src="~/js/Areas/Vendor/Views/AmmoBoxes/calculateImportPrice.js"></script>