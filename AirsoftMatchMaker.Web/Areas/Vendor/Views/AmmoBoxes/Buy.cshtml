@using System.Text.RegularExpressions;
@model AmmoBoxBuyModel

@{
    ViewBag.Title = "Ammo Box Details";
}

<h2 class="text-center">@ViewBag.Title</h2>


<div class="container" style="display:inline">
    <div class="row">

        <div class="card col-8 border-0">
            <p style="font-size:25px;">@Model.Name</p>
            <form asp-controller="AmmoBoxes" asp-action="Buy" method="post">
                <input asp-for="AmmoAmount" class="form-control" hidden />
                <label asp-for="AmmoAmount">
                    <p>
                        Ammo : @Model.AmmoAmount
                    </p>
                </label>

                <label asp-for="Price">
                    Price:
                    <b>
                        @Model.Price credits
                    </b>
                </label>
                <input asp-for="Price" class="form-control" hidden/>
                <input asp-for="VendorId" class="form-control" hidden/>

                @if (Model.VendorName != null)
                {
                    <p>
                        Vendor:
                        <b>
                            <a class="btn btn-primary btn-info" asp-controller="Vendors" asp-action="Details" asp-route-id="@Model.VendorId"> @Model.VendorName</a>
                        </b>
                    </p>
                }
                <label asp-for="BuyCount">Select quantity to buy</label>
                <select asp-for="BuyCount">
                    @for (int i = 1; i <= Model.Quantity; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <button class="btn btn-success">Buy</button>
            </form>
        </div>
    </div>
</div>