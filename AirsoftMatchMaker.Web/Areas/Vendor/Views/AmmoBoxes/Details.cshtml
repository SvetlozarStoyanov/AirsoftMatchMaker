@model AmmoBoxViewModel

@{
    //string img = @Model.ImageUrl != null ? @Model.ImageUrl : $"/img/Default/Clothes/{Model.ClothingColor}.jpg";
    ViewBag.Title = "Ammo Box Details";
}




<h1 class="text-center mt-6 mb-6">@Model.Name</h1>
<article class="mt-6 mb-6 bg-dark bg-opacity-25 border border-white">
    <div class="text-center">
        <p>
            <h4>
                Amount :
                <b>@Model.Amount</b>
            </h4>
        </p>
        <p>
            <h4>
                Quantity:
                <b>@Model.Quantity</b>
            </h4>
        </p>
    </div>
    <div class="container mt-6 mb-6">
        <div class="text-center mt-6 mb-6">
            @*            <img class="" style="width: 20rem;"
            src="@img" alt="Weapon Image">*@
            <div class="mt-6 mb-6 text-center">
                <p>
                    <h4>
                        Price:
                        <b>
                            @Model.Price credits
                        </b>
                    </h4>
                </p>
            </div>
        </div>
    </div>
</article>

@if (Model.VendorId == ViewBag.VendorId)
{
    <div class="text-center mt-3 mb-3">
        @if (ViewBag.UserCredits >= Model.Price / 2)
        {
            <a asp-area="Vendor" asp-controller="AmmoBoxes" asp-action="Restock" asp-route-id="@Model.Id"
       class="btn btn-primary">
                <i class="bi bi-bucket-fill"></i>
                Restock
            </a>
        }
        else
        {
            <button class="btn btn-primary" disabled>
                <i class="bi bi-bucket-fill"></i>
                Restock
            </button>
        }
    </div>
}