@using System.Text.RegularExpressions;
@model AmmoBoxRestockModel

@{
    ViewBag.Title = "Ammo Box Details";
}

<h2 class="text-center">@ViewBag.Title</h2>


<div class="container" style="display:inline">
    <div class="row">

        <div class="card col-8 border-0">
            <p style="font-size:25px;">@Model.Name</p>
            <form asp-area="Vendor" asp-controller="AmmoBoxes" asp-action="Restock" method="post">
                <div class="form-group">
                    <label asp-for="Name">
                        Name:
                        <b>
                            @Model.Name
                        </b>
                    </label>
                    <input asp-for="Name" class="form-control" hidden />
                </div>
                <div class="form-group">
                    <label asp-for="AmmoAmount">
                        Ammo Amount:
                        <b>
                            @Model.AmmoAmount
                        </b>
                    </label>
                    <input asp-for="AmmoAmount" class="form-control" hidden />
                </div>

                <div class="form-group">
                    <label asp-for="Price">
                        Price per box:
                        <b>
                            @Model.Price credits
                        </b>
                    </label>
                    <input asp-for="Price" class="form-control" hidden />
                </div>
                  <div class="form-group">
                    <label asp-for="Price">
                       Current Quantity:
                        <b>
                            @Model.Quantity boxes
                        </b>
                    </label>
                    <input asp-for="Quantity" class="form-control" hidden />
                </div>
                <input asp-for="VendorId" class="form-control" hidden />
                <div class="form-group">
                    <label asp-for="QuantityAdded">Select quantity to buy</label>
                    <select asp-for="QuantityAdded">
                        @for (int i = 1; i <= 1000 - Model.Quantity; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                    <button class="btn btn-success">Restock</button>
                </div>
            </form>
        </div>
    </div>
</div>