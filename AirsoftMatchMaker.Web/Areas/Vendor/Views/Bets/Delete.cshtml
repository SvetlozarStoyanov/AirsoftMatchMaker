
@model BetDeleteModel
@{
    ViewBag.Title = "Delete bet";
}
<article class="mt-3 mb-3 bg-dark bg-opacity-25 border border-white">
    <h1 class="text-center mt-3 mb-3">
        @Model.GameName
    </h1>
    <div class="text-center mt-5 mb-5">
        <p>
            <h4>
                Credits bet:
                <b>
                    @Model.CreditsBet credits
                </b>
            </h4>
        </p>
    <p>
            <h4>
                Picked team:
                <b>
                    @Model.WinningTeamName 
                </b>
            </h4>
        </p>
        <p>
            <h4>
                Potential payout:
                <b>
                    @Model.PotentialProfit credits
                </b>
            </h4>
        </p>
    </div>
    <form asp-controller="Bets" asp-action="Delete" asp-route-betId="@Model.Id" asp-route-gameId="@Model.GameId" method="post">
        <div class="text-center mt-3 mb-3">
            <button class="btn btn-danger btn-lg" type="submit">
                <i class="bi bi-trash-fill"></i>
                Delete
            </button>
        </div>
    </form>
</article>