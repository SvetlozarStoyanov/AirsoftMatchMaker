@model PlayerListModel

<div class="col-md-4 mt-3">
    <div class="card mb-3 bg-dark bg-opacity-10">

        <div class="card-body text-center text-white bg-dark bg-opacity-25 border border-white">
            <h4 class="text-center">@Model.UserName</h4>
            <h6>Team: <b>@Model.TeamName</b></h6>
            <h6><b>@Model.SkillLevel</b></h6>
            <br />
            <a asp-area="Vendor" asp-controller="Players" asp-action="Details" asp-route-id="@Model.Id"
               class="btn btn-primary">
                Details
            </a>
        </div>
    </div>
</div>
