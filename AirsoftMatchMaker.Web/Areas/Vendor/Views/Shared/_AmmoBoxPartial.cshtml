@model AmmoBoxListModel


<div class="col-md-4 mt-3">
    <div class="card mb-3">
@*        <div class="text-center">
            <img style="height:250px;" class="card-img-top" src="@img" alt="Clothing Image">
        </div>*@
        <div class="card-body text-center">
            <h3 class="text-center">@Model.Name</h3>
            <h4>Ammunition: @Model.Amount</h4>
            <h4>Quantity: @Model.Quantity</h4>
            <h6>Price: <b>@Model.Price credits</b></h6>
            <br />
            <a asp-area="Vendor" asp-controller="AmmoBoxes" asp-action="Details" asp-route-id="@Model.Id"
               class="btn btn-primary">
                <i class="bi bi-info"></i>
                Details
            </a>
            <a asp-area="Vendor" asp-controller="AmmoBoxes" asp-action="Restock" asp-route-id="@Model.Id"
               class="btn btn-primary">
                <i class="bi bi-bucket-fill"></i>
                Restock
            </a>
            @*    <a asp-controller="Houses" asp-action="Delete" asp-route-id="@Model.Id"
            class="btn btn-danger">
            Delete
            </a>*@
        </div>
    </div>
</div>