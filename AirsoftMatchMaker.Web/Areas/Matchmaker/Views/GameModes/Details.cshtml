@model GameModeViewModel

@{
    ViewBag.Title = "Game Mode Details";
}
<h1 class="text-center mt-6 mb-6">@Model.Name</h1>
<article class="mt-6 mb-6 bg-dark bg-opacity-25 border border-white">
    <div class="text-center">
        <p>
            <h4>
                Points to win:
                <b>
                    @Model.PointsToWin
                </b>
            </h4>
        </p>
    </div>
    <div class="container mt-6 mb-6">

        <div class="text-center mt-6 mb-6">
            <p style="font-size:40px;">
                @Model.Description
            </p>
        </div>
    </div>
    <section class="text-center mt-6 mb-6">
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseMaps" aria-expanded="false" aria-controls="collapseMaps">
            <h5>Maps featuring this gamemode: @Model.Maps.Count </h5>
        </button>
        <div class="collapse" id="collapseMaps">
            <div class="row">
                @foreach (var map in Model.Maps)
                {
                    <partial name="_MapMinPartial" model="@map" />
                }
            </div>
        </div>
    </section>
    <hr />
    <section class="text-center mt-6 mb-6">
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseGames" aria-expanded="false" aria-controls="collapseGames">
            <h5>Games with this gamemode: @Model.Games.Count </h5>
        </button>
        <div class="collapse" id="collapseGames">
            <div class="row">
                @foreach (var game in Model.Games)
                {
                    <partial name="_GameMinPartial" model="@game" />
                }
            </div>
        </div>
    </section>
</article>