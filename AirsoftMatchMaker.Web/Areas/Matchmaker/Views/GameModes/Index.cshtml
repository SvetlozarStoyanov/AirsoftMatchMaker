@using System.Text.RegularExpressions;
@model IEnumerable<GameModeListModel>
<table class=" table table-bordered  table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>  
            <th>
                Points required to win
            </th>
            <th>
                Supported Maps Count
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var gameMode in Model)
        {
            <tr>
                <td width="50%">
                    @gameMode.Name
                </td>
                <td width="30%">
                    @gameMode.PointsToWin points
                </td>
              
                <td width="30%">
                    @gameMode.MapsCount
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-area="Matchmaker" asp-controller="GameModes" asp-action="Details" asp-route-id="@gameMode.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-info-square-fill"></i>
                            Details
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>
