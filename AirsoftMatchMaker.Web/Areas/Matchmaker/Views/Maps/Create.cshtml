@model MapCreateModel
@{
    ViewBag.Title = "Add map";
}
<h2 class="text-center">@ViewBag.Title </h2>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <section>
            <form id="account" asp-area="Matchmaker" asp-controller="Maps" asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl">Image Url (not required)</label>
                    <input asp-for="ImageUrl" class="form-control">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="GameModeId">Game mode</label>
                    <select asp-for="GameModeId" class="form-control">
                        @for (int i = 0; i < Model.GameModeIds.Count; i++)
                        {
                            <option value="@Model.GameModeIds.ElementAt(i)">@Model.GameModeNames.ElementAt(i)</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Mapsize">Size</label>
                    <select asp-for="Mapsize" class="form-control">
                        @foreach (var size in Model.Mapsizes)
                        {
                            <option value="@size">@string.Join(" ", Regex.Matches(size.ToString(), "[A-Z][a-z]*").Select(m => m.Value).ToArray())</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="TerrainType">Terrain</label>
                    <select asp-for="TerrainType" class="form-control">
                        @foreach (var terrain in Model.TerrainTypes)
                        {
                            <option value="@terrain">@string.Join(" ", Regex.Matches(terrain.ToString(), "[A-Z][a-z]*").Select(m => m.Value).ToArray())</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="AverageEngagementDistance">Range</label>
                    <select asp-for="AverageEngagementDistance" class="form-control">
                        @foreach (var distance in Model.AverageEngagementDistances)
                        {
                            <option value="@distance">@string.Join(" ", Regex.Matches(distance.ToString(), "[A-Z][a-z]*").Select(m => m.Value).ToArray())</option>
                        }
                    </select>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary mt-3" type="submit" value="Import">Add</button>
                </div>
            </form>
        </section>
    </div>
</div>
