@model GameModeListModel

<div class="col-md-4 mt-3">
    <div class="card mb-3">

        <div class="card-body text-center ">
            <h4 class="text-center">@Model.Name</h4>
            <h5><b>@Model.Description</b></h5>
            <h6>Points to win <b>@Model.PointsToWin</b></h6>
            <h6>Maps with this game mode:<b>@Model.MapsCount</b></h6>
            <br />
            <a asp-area="Matchmaker" asp-controller="GameModes" asp-action="Details" asp-route-id="@Model.Id"
               class="btn btn-primary">
                Details
            </a>
        </div>
    </div>
</div>
