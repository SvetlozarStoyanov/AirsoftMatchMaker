@using System.Text.RegularExpressions;
@model IEnumerable<PlayerListModel>
<table class=" table table-bordered  table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                Skill Level
            </th>

            <th>
                Team Name
            </th>
            <th>
                Weapons count
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td width="50%">
                    @user.UserName
                </td>
                <td width="30%">
                    @user.SkillLevel.ToString()
                </td>
                <td width="30%">
                    @user.TeamName
                </td>
                <td width="30%">
                    @user.WeaponsCount
                </td>

                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-area="Matchmaker" asp-controller="Players" asp-action="Details" asp-route-id="@user.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-info-square-fill"></i>
                            Details
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>
