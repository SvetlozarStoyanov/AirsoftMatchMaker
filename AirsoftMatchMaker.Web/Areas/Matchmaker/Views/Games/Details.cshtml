<div class="container mt-5 mb-5">
    <div class="row">
        <partial name="_TeamMinPartial" model="Model.TeamRed" />
        <div class="col text-center d-flex align-items-center justify-content-center">
            <p style="font-size:30px" class="mt-5 mb-5 mx-2">
                <b>VS</b>
            </p>
        </div>
        <partial name="_TeamMinPartial" model="Model.TeamBlue" />
    </div>
</div>
@if (ViewBag.FinaliseGameModel != null)
{
    <div class="text-center">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Finalise
        </button>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <partial name="_GameFinalisePartial" model="@ViewBag.FinaliseGameModel" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    @*<button type="button" class="btn btn-primary">Finalise</button>*@
                </div>
            </div>
        </div>
