@model GameSelectDateModel

<h2 class="text-center">Select a date</h2>

<form asp-area="Matchmaker" asp-controller="Games" asp-action="Create" method="get">
    <select asp-for="DateTime" class="form-control">

        @foreach (var date in Model.Dates)
        {
            <option value="@date">@date </option>
        }
    </select>
    <button class="btn btn-success" type="submit">Confirm date</button>
</form>